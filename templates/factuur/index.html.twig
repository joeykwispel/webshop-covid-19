{% extends 'base.html.twig' %}

{% block title %}Factuur index{% endblock %}

{% block body %}
    <h1>Factuur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Factuur_nummer</th>
                <th>Factuur_korting</th>
                <th>Btw_nummer</th>
                <th>Date</th>
                <th>Verval_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factuur in factuurs %}
            <tr>
                <td>{{ factuur.id }}</td>
                <td>{{ factuur.factuurNummer }}</td>
                <td>{{ factuur.factuurKorting }}</td>
                <td>{{ factuur.BtwNummer }}</td>
                <td>{{ factuur.date ? factuur.date|date('Y-m-d') : '' }}</td>
                <td>{{ factuur.vervalDate ? factuur.vervalDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('factuur_show', {'id': factuur.id}) }}">show</a>
                    <a href="{{ path('factuur_edit', {'id': factuur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('factuur_new') }}">Create new</a>
{% endblock %}
